    <h1 class="text-center"> Student's Dashboard</h1>
        <form action="/studentprofile" method="POST">

{{#if test}}
{{#each test}}
  <div class="container">
  


    <h5 class="mt-3">Grade: {{selectGrade}}</h5>
    <h5 class="mt-3">Goal: {{selectGoal}}</h5>
    <div >
      <div class="col-md-6 mb-4">
      subject : <strong>{{subject}}</strong>  <br>
       Task : <strong>{{taskName}}</strong> <br>
        Sequence : <strong>{{sequence}}</strong>  <br>
        Hour : <strong>{{hour}}</strong>  <br>

        <hr>
        {{#quesArray}}
        <p id="showques"> option1: <strong>{{option1}}</strong></p>
        <p id="showques"> option2: <strong>{{option2}}</strong></p>
        <p id="showques"> option3: <strong>{{option3}}</strong></p>
        <p id="showques"> quesstionId: <strong>{{questionID}}</strong></p>


        {{/quesArray}}

        <input  class="disabledInput" type="hidden" value="{{quesArray}}">
          <div class="card " style="border-radius: 25px;">
            <div class="card-body">

<input type="hidden" name="idstudent" value="{{idstudent}}">
<input type="hidden" name="taskID" value="{{taskID}}">

<h3><input name="ques" id="questionShow" readonly style="border:none"></h3>
        <input name="option1" id="questionShow1" readonly style="border:none"> <br>
        <input  name="option2" id="questionShow2"readonly style="border:none"><br>
        <input name="option3" id="questionShow3"readonly style="border:none"><br>
        <input  name="option4" id="questionShow4"readonly style="border:none"><br>
        <input name="option5" id="questionShow5"readonly style="border:none"><br>
        <input id="answer" name="correctAns" hidden><br>
        <br>
       Your answer : <input name="ans" type="text" placeholder="Your Answer">
 
            </div>

          </div>
</div>

<br><br>
  {{/each}}
{{else}} <h2>NO Test Available</h2>
{{/if}}
        <button class="btn btn-primary" type="submit">submit test</button>
  </div>
      </div>

        </form>
               
      <br>
      <div class="col-md-6">
