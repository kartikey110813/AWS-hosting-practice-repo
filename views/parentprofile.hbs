        {{#if users}}
         {{#each users}}
         <div class="card-header">
            <div class="card-body">
                <p class="card-title">{{usernameStudent}}</p>
                <div class="mb-3">
                </div>
                <br>
                 <form action="/parentprofile/managegoals" method="post">
               <input required type="hidden" class="form-control" id="idparents" name="idstudent" value="{{idstudent}}">
               <input required type="hidden" class="form-control" id="usernameStudent" name="usernameStudent" value="{{usernameStudent}}">
                 <button class="btn btn-primary" type="submit">Select/Manage Goals</button>
              </form>
                <a href="" class="btn btn-warning">Update Password</a>
             
            </div>
        </div>
        {{/each}}
        {{else}}
        <h1>No student added</h1>
        {{/if}}


    </div>
