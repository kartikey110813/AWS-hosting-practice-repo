    <div class="container">
        <h1>Welcome {{user.parentName}}</h1>
        
    </div>
    
    <div class="card mx-auto" style="width: 30rem;">
        <div class="card-body">
            <h3>Add Student</h3>
                <div class="mb-3">
                <label for="name" class="form-label">Username</label>
                <input required type="text" class="form-control" id="name" name="usernameStudent">
            </div>
          
           <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input required type="password" class="form-control" id="password" name="passwordStudent">
            </div>
             <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input required type="password" class="form-control" id="confirmPassword" name="confirmPasswordStudent">
            </div>
            <div class="mb-3">
                <label for="studentFirstName" class="form-label">First Name</label>
                <input required type="text" class="form-control" id="studentFirstName" name="studentFirstName">
            </div>
            <div class="mb-3">
                <label for="studentLastName" class="form-label">Last name</label>
                <input required type="text" class="form-control" id="studentLastName" name="studentLastName">
            </div>
            <div class="mb-3">
                <input required type="hidden" class="form-control" id="idparents" name="idparents" value="{{user.idparents}}">
            </div>
            <button type="submit" class="btn btn-success" id="parentSubmit">Register Student</button>
        </div>
        
    <h6 class="text-center">Note : You cannot add more than 5 students.</h6>
    </div>

    <div id="showing_student">{{usernameStudent}}</div>

    <br><br><br><br>

